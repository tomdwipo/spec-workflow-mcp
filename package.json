    "mermaid": "^10.9.1",
    "mustache": "^4.2.0",
    "open": "^8.4.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.7.3",
    "react-router-dom": "^6.26.2",
    "simple-git": "^3.28.0"
